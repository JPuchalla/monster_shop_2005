<h3>New User Registration</h3>

<%= form_tag("/register") do %>
  <section>
    <%= label_tag "Name: " %>
    <%= text_field_tag :name %>
    <%= label_tag "Street Address: " %>
    <%= text_field_tag :street_address %>
    <%= label_tag "City: " %>
    <%= text_field_tag :city %>
    <%= label_tag "State: " %>
    <%= text_field_tag :state %>
    <%= label_tag "Zip Code: " %>
    <%= text_field_tag :zip %>
    <%= label_tag "Email Address: " %>
    <%= text_field_tag :email %>
    <%= label_tag "Password: " %>
    <%= text_field_tag :password %>
    <%= label_tag "Confirm Password: " %>
    <%= text_field_tag :password_confirmation %>

    <%= submit_tag 'submit', class: :button %>
  </section>
<% end %>
